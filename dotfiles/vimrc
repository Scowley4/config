" Change tabbing for makefile
function! SetMakeOptions()
    echo "Called SetMakeOptions"
    setlocal noexpandtab
endfunction

autocmd FileType make call SetMakeOptions()

" HTML
function! SetWebOptions()
    " echo "Set options for html, js, json, css"
    set softtabstop=2
    set tabstop=2
    set shiftwidth=2
    set expandtab
endfunction

